{
  "name": "@fewlines/connect-client",
  "version": "0.5.1",
  "author": "Fewlines",
  "description": "OAuth2 Client for the Connect JS SDK",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prelint": "prettier --trailing-comma all --write './**/*.md'",
    "lint": "eslint --ext ts --ignore-pattern dist .",
    "prebuild": "yarn clean",
    "prepare": "yarn build",
    "prepublishOnly": "yarn lint",
    "experimental-publish": "yarn publish --new-version \"0.0.0-experimental-$(git rev-parse --short HEAD)\" --access public --tag experimental",
    "preversion": "yarn lint",
    "test": "jest"
  },
  "dependencies": {
    "jsonwebtoken": "8.5.1",
    "node-fetch": "2.6.1",
    "node-jose": "2.0.0"
  },
  "devDependencies": {
    "@fewlines/eslint-config": "3.1.2",
    "@types/jest": "27.0.1",
    "@types/jsonwebtoken": "8.5.5",
    "@types/node": "16.7.10",
    "@types/node-fetch": "2.5.12",
    "@types/node-jose": "1.1.8",
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "4.30.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.1.0",
    "jest-fetch-mock": "3.0.3",
    "prettier": "2.3.2",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.4.2"
  },
  "eslintConfig": {
    "extends": [
      "@fewlines/eslint-config/node",
      "@fewlines/eslint-config/typescript"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "dist/"
    ]
  }
}
