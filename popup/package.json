    "eslint-plugin-import": "2.24.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "27.0.6",
    "prettier": "2.3.2",
    "rollup": "2.56.2",
    "rollup-plugin-babel-minify": "10.0.0",
    "rollup-plugin-commonjs": "10.1.0",
